{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Sets generator and source directory",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "x64-ninja-msvc",
            "displayName": "Windows (x64): Ninja + cl.exe (with STT)",
            "inherits": "default",
            "hidden": true,
            "description": "Sets x64 architecture, compiler/linker, and build type",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_LINKER": "link",
                "CMAKE_RC_COMPILER": "rc"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "stt-off",
            "displayName": "Without STT",
            "inherits": "x64-ninja-msvc",
            "description": "speech-to-text disabled",
            "cacheVariables": {
                "USE_SPEECH_TO_TEXT": "OFF",
                "THROW_ON_DOUBLE_HOOK": "OFF"
            }
        },
        {
            "name": "stt-on",
            "displayName": "With STT",
            "inherits": "x64-ninja-msvc",
            "description": "speech-to-text enabled",
            "cacheVariables": {
                "USE_SPEECH_TO_TEXT": "ON",
                "THROW_ON_DOUBLE_HOOK": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build",
            "displayName": "Build (without STT)",
            "configurePreset": "stt-off"
        },
        {
            "name": "build-stt",
            "displayName": "Build with STT",
            "configurePreset": "stt-on"
        }
    ]
}
